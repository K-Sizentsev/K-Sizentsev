from random import *

answers = ["Бесспорно", "Мне кажется - да", "Пока неясно, попробуй снова", "Даже не думай",
           "Предрешено", "Вероятнее всего", "Спроси позже", "Мой ответ - нет",
           "Никаких сомнений", "Хорошие перспективы", "Лучше не рассказывать", "По моим данным - нет",
           "Можешь быть уверен в этом", "Да", "Сконцентрируйся и спроси опять", "Весьма сомнительно"]
flag = False


def game(): # Запуск игры
    global flag
    print('Привет Мир, я магический шар, и я знаю ответ на любой твой вопрос.')
    user_name = input('Как мне к тебе обращаться? => ')
    print(f'Приветствую тебя, {user_name}!')
    while flag == False:
        question = input('Давай погадаем, что ты хочешь узнать? => ')
        for i in range(randint(0, 10)):
            print('*** шар гадает ***')
        print(choice(answers))
        print('Может вы желаете задать другой вопрос?')
        resh = input('Нажмите "Y" на клавиатуре если таковые '
                     'имеются. Или же любую другую клавишу для завершения => ').lower()
        if resh == 'y':
            continue
        else:
            print('Возвращайся если возникнут вопросы!')
            flag = True

game() # Вызов игры
